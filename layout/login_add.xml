<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:gravity="fill_vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 會員註冊"
            android:textSize="30dip"
            android:drawableLeft="@drawable/login_final1"   />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="______________________________________________" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/login_add_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帳號:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/add_ac"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:ems="10"
            android:textColor="#003399"
            android:hint="請輸入5個以上的英文與數字!"
            android:textSize="20dp"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/login_add_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密碼:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/add_pwd"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#003399"
            android:hint="請輸入5個以上的英文與數字!" 
            android:textSize="20dp"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e-mail:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/add_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="#003399" 
            android:textSize="20dp"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnm@.QWERTYUIOPASDFGHJKLZXCVBNM_"/>

    </LinearLayout>

    <TextView
        android:id="@+id/add_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="60dp"
        android:text="" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:text="生日:" 
        android:textSize="20dp"/>

    <Button
        android:id="@+id/add"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/add_login"
        android:layout_alignBottom="@+id/add_login"
        android:layout_alignLeft="@+id/linearLayout1"
        android:background="@drawable/b_regi" />

    <Button
        android:id="@+id/add_login"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:background="@drawable/b_login" />

    <Button
        android:id="@+id/clear"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/add_login"
        android:layout_alignBottom="@+id/add_login"
        android:layout_alignRight="@+id/linearLayout1"
        android:background="@drawable/b_clean" />

    <EditText
        android:id="@+id/add_year"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:ems="4"
        android:background="@drawable/shape"
        android:inputType="number"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/add_month"
        android:text="日" 
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/add_day"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:ems="2"
        android:background="@drawable/shape"
        android:inputType="number" 
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_year"
        android:layout_toRightOf="@+id/add_year"
        android:text="月" 
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/add_month"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:background="@drawable/shape"
        android:ems="2"
        android:textSize="20dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/add"
        android:layout_below="@+id/textView4"
        android:text="西元年"
        android:textSize="20dp" />

</RelativeLayout>